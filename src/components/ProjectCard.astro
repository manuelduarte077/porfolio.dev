---
import type { Project } from "@/data/projects";

type Props = Project & {
  variant?: "compact" | "grid";
};

const { title, techs, link, isComingSoon, image, variant = "grid" } = Astro.props;

const formatTechs = (values: string[]) =>
  values.toString().replaceAll(",", " â€¢ ");

const isCompact = variant === "compact";
---

<>
  {
    isComingSoon ? (
      <div
        class:list={[
          "group rounded-md border border-neutral-700 p-4 transition-all duration-300",
          isCompact ? "flex items-center justify-between gap-4" : "flex flex-col gap-4"
        ]}
      >
        <div
          class:list={[
            isCompact ? "flex items-center gap-4" : "space-y-4"
          ]}
        >
          {image && (
            <img
              src={image}
              alt={`Preview de ${title}`}
              class:list={[
                "rounded-md object-cover",
                isCompact ? "h-24 w-24" : "h-48 w-full"
              ]}
              loading="lazy"
            />
          )}
          <div class="flex flex-col gap-2">
            <h3 class="text-neutral-100">{title}</h3>
            <p class="text-sm text-neutral-400">{formatTechs(techs)}</p>
          </div>
        </div>
        <span class="rounded-md bg-neutral-900 px-4 py-1 text-sm">Soon</span>
      </div>
    ) : (
      <a
        class:list={[
          "group rounded-md border border-neutral-700 p-4 transition-all duration-300",
          "hover:-translate-y-2 hover:border-neutral-400",
          isCompact ? "flex items-center justify-between gap-4" : "flex flex-col gap-4"
        ]}
        href={link}
        target="_blank"
        rel="noreferrer"
      >
        <div
          class:list={[
            isCompact ? "flex items-center gap-4" : "space-y-4"
          ]}
        >
          {image && (
            <img
              src={image}
              alt={`Preview de ${title}`}
              class:list={[
                "rounded-md object-cover",
                isCompact ? "h-24 w-24" : "h-48 w-full"
              ]}
              loading="lazy"
            />
          )}
          <div class="flex flex-col gap-2">
            <h3 class="text-neutral-100">{title}</h3>
            <p class="text-sm text-neutral-400">{formatTechs(techs)}</p>
          </div>
        </div>

        <svg
          width="18"
          height="18"
          viewBox="0 0 18 18"
          fill="none"
          class="h-fit transition-all duration-300 group-hover:translate-x-1"
          aria-hidden="true"
        >
          <path
            d="M5.25 12.75L12.75 5.25"
            stroke="#999999"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M5.25 5.25H12.75V12.75"
            stroke="#999999"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
    )
  }
</>
