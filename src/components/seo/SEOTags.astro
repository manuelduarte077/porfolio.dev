---
import { SEO } from "astro-seo";
import { AstroFont } from "astro-font";
import { SITE_URL } from "@/data/config";
import type { HeadTags } from "@/utils/types/HeadTags";

type Props = HeadTags;

const { title, description, noindex, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Don Manuel - Software Engineer";
const DEFAULT_DESCRIPTION_PAGE = "A minimal portfolio website for Don Manuel";
const DEFAULT_URL_SITE = SITE_URL;

const openGraph = {
  title: title || og?.title || DEFAULT_TITLE_PAGE,
  type: og?.type || "website",
  image: og?.image || "/images/donmanuel-og.png",
  alt: og?.alt || "manuel duarte, manuel, duarte, software engineer",
  url: DEFAULT_URL_SITE,
  description: og?.description || DEFAULT_DESCRIPTION_PAGE,
};
---

<head>
  <SEO
    charset="UTF-8"
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_DESCRIPTION_PAGE}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
      },
      image: {
        alt: openGraph.alt,
        height: 630,
        width: 1200,
      },
      optional: {
        locale: "en_US",
        siteName: "Don Manuel",
        description: openGraph.description,
      },
    }}
    twitter={{
      creator: "@manuelduarte077",
      description: openGraph.description,
      image: openGraph.image,
      imageAlt: openGraph.alt,
      title: openGraph.title,
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        {
          name: "twitter:image",
          content: openGraph.image,
        },
        { name: "twitter:card", content: "summary_large_image" },
        { name: "twitter:title", content: openGraph.title },
        { name: "twitter:description", content: openGraph.description },
        { name: "twitter:site", content: "@manuelduarte077" },
      ],
    }}
  />

  <AstroFont
    config={[
      {
        src: [],
        preload: false,
        display: "swap",
        selector: "html",
        name: "Open Sans",
        fallback: "sans-serif",
        cssVariable: "font-open-sans",
        googleFontsURL:
          "https://fonts.googleapis.com/css2?family=Open+Sans&display=swap",
      },
    ]}
  />

  <script
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8106254343727768"
    crossorigin="anonymous"></script>

  <!-- Google tag (gtag.js) -->
  {
    import.meta.env.PROD && (
      <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z558SE7H78"></script>
    <script>
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      // @ts-ignore
      function gtag(){dataLayer.push(arguments);}
      // @ts-ignore
      gtag("js", new Date());

      // @ts-ignore
      gtag("config", "G-Z558SE7H78");
    </script>
    )
  }
</head>


